include<stdio.h>
int main()
{
	int array[3][3],i,j;
	printf("Input elements in the matrix :\n");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("Element - [%d],[%d] : ",i,j);
			scanf("%d",&array[i][j]);
		}
	}
	printf("The matrix is : \n");
	for(i=0;i<3;i++)
	{
		printf("\n");
		for(j=0;j<3;j++)
			printf("%d ",array[i][j]);
	}
	printf("\n\n");
}
